            <li id="view_list" class="s_selected"><a href="~/listing_1.html"><span class="s_icon"></span>List</a></li>
          </ul>
        </div>
      </div>

      <div class="clear"></div>
      
      <div class="s_listing s_list_view clearfix">
          @foreach (var item in Model.Item1)
            {
                 <div class="s_item clearfix">
                  <div class="grid_3 alpha"> <a class="s_thumb" href="~/product.html"><img src="~/images/dummy/@(item.Image)" title="@item.Title" alt="Leica M7" /></a> </div>
                  <div class="grid_6 omega">
                    <h3><a asp-action="ProductSingle" asp-route-id="@item.Id">@item.Title</a></h3>
                    <p class="s_model"></p>
                    <p class="s_price">@item.Price</p>
                    @if (item.Description.Length <= 250)
                        {
                            <p class="s_description">@item.Description</p>
                        }
                        else
                        {
                            <p class="s_description">@(item.Description.Substring(0, 250))...</p>
                        }
                        <a class="s_button_add_to_cart" href="~/product.html"><span class="s_icon_16"><span class="s_icon"></span>Add to Cart</span></a>
                  </div>
                </div>

                <div class="clear"></div>
           }
       


      </div>
      
      <div class="pagination">
        <div class="results">Showing 1 to 6 of 6 (1 Pages)</div>
      </div>
      
    </div>
    
