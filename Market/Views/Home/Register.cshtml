  <!-- ********************** --> 
  <!--      C O N T E N T     --> 
  <!-- ********************** --> 
  <div id="content" class="container_16">
  

    <div class="grid_16">

      <form method="post" id="create" class="clearfix" asp-action="RegisterAcc">
        <h2 class="s_title_1"><span class="s_secondary_color">Регистрация</span> аккаунта</h2>
        <div class="clear"></div>

        <div class="s_row_3 clearfix"   >
          <label class="required"><strong>Фамилия</strong></label>
          <input type="text" name="LastName" placeholder="Фамилия" required="" size="30" />
        </div>
        <div class="s_row_3 clearfix">
          <label class="required"><strong>Имя</strong></label>
          <input type="text" name="FirstName" placeholder="Имя" required="" size="30" />
        </div>
        <div class="s_row_3 clearfix">
          <label class="required"><strong>Отчество</strong></label>
          <input type="text" name="MiddleName" placeholder="Отчество" size="30" />
        </div>
        <div class="s_row_3 clearfix">
          <label class="required"><strong>Имя пользователя</strong></label>
          <input type="text" name="Login" placeholder="Логин" required="" size="30" />
        </div>
        <div class="s_row_3 clearfix">
          <label class="required"><strong>Пароль</strong></label>
          <input type="password" name="Password" placeholder="Пароль" required="" size="30" />
        </div>

        <input type="submit" class="s_button_1 s_main_color_bgr left"/>
        
      </form>
      
      <br />
      <br />
  
    </div>
    
  </div>
  <!-- end of content --> 



